<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.layout.VBox?>
        <?import javafx.scene.layout.Pane?>
        <?import javafx.scene.control.Button?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.scene.text.TextFlow?>
        <?import javafx.scene.text.Text?>
        <?import javafx.scene.shape.Line?>


<VBox fx:id="mainPanel" styleClass="VBOX-CLASS" xmlns:fx="https://javafx.com.fxml"
      fx:controller="com.example.helloworldfx.HelloController">
<HBox styleClass="hbox-class" fx:id="header">
    <Button styleClass="headerButton" fx:id="btnSettings"/>
    <Button styleClass="headerButton" fx:id="btnUser"/>
    <Button styleClass="headerButton" fx:id="btnTrophy"/>
    <Button styleClass="headerButton" fx:id="btnPower"/>
</HBox>

<Pane styleClass="pane-class" fx:id="divider"></Pane>

<VBox styleClass="vbox-class" fx:id="main">
    <HBox styleClass="hbox-class" fx:id="touchPanel">
        <VBox styleClass="vbox-class" fx:id="leftTouchPanel">
            <Label styleClass="label-class" fx:id="lblTouchTitle">
                Touch enabled
            </Label>
            <TextFlow fx:id="ftTouchText">
                <Text fx:id="txtTouchText">
                    Called 3D touch, the new technology can sense pressure
                </Text>
            </TextFlow>
        </VBox>
        <HBox styleClass="hbox-class" fx:id="rightTouchPanel">
            <Button fx:id="btnToggle"/>
            <Label fx:id="lblToggle" text="On"/>
        </HBox>
    </HBox>
    <HBox styleClass="hbox-class" fx:id="SubscribePanel">
        <VBox styleClass="vbox-class" fx:id="leftSubscribePanel">
            <Label styleClass="label-class" fx:id="lblSubscribeTitle">
                AUTO-SUBSCRIBE
            </Label>
            <TextFlow fx:id="ftSubscribeText">
                <Text fx:id="txtSubscribeText">
                    Called 3D touch, the new technology can sense pressure
                </Text>
            </TextFlow>
        </VBox>
        <HBox styleClass="hbox-class" fx:id="rightSubscribePanel">
            <Button fx:id="btnSubscribeToggle"/>
            <Label fx:id="lblSubscribeToggle" text="On"/>
        </HBox>
    </HBox>

    <Pane styleClass="pane-class" fx:id="divider2">  </Pane>
    <Line fx:id="line" startX="0" startY="60"  endX="400" endY="60" />
    <VBox  styleClass="vbox-class" fx:id="">
        <Label styleClass="label-class" fx:id="lblTxtSlider">
            SCREEN BRIGHTNESS
        </Label>
        <Pane fx:id="Slider" />
    </VBox>
    <Line fx:id="line2" startX="0" startY="60"  endX="400" endY="60" />

    <HBox styleClass="hbox-class" fx:id="btnSaveCancel">
        <HBox styleClass="hbox-class" fx:id="save">
            <Button text="Save" fx:id="btnSave"/>
        </HBox>
        <HBox styleClass="hbox-class" fx:id="Cancel">
            <Button text="Cancel" fx:id="btnCancel"/>
        </HBox>
    </HBox>

</VBox>
</VBox>
